{
  "info": {
    "name": "Restaurant POS - Products API",
    "description": "Complete collection for testing Products API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000/api/v1",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "product_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "List Products",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/products/?page=1&page_size=10",
          "host": ["{{base_url}}"],
          "path": ["products", ""],
          "query": [
            {
              "key": "page",
              "value": "1",
              "description": "Page number"
            },
            {
              "key": "page_size",
              "value": "10",
              "description": "Items per page (max 100)"
            }
          ]
        },
        "description": "Get paginated list of all products"
      },
      "response": []
    },
    {
      "name": "List Products - Page 2",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/products/?page=2&page_size=10",
          "host": ["{{base_url}}"],
          "path": ["products", ""],
          "query": [
            {
              "key": "page",
              "value": "2"
            },
            {
              "key": "page_size",
              "value": "10"
            }
          ]
        },
        "description": "Get second page of products"
      },
      "response": []
    },
    {
      "name": "Search Products",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/products/?search=burger&page=1&page_size=10",
          "host": ["{{base_url}}"],
          "path": ["products", ""],
          "query": [
            {
              "key": "search",
              "value": "burger",
              "description": "Search in product name and description"
            },
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "page_size",
              "value": "10"
            }
          ]
        },
        "description": "Search products by name or description"
      },
      "response": []
    },
    {
      "name": "Filter - Available Only",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/products/?available=true&page=1&page_size=10",
          "host": ["{{base_url}}"],
          "path": ["products", ""],
          "query": [
            {
              "key": "available",
              "value": "true",
              "description": "Filter by availability"
            },
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "page_size",
              "value": "10"
            }
          ]
        },
        "description": "Get only available products"
      },
      "response": []
    },
    {
      "name": "Filter - Featured Only",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/products/?featured=true&page=1&page_size=10",
          "host": ["{{base_url}}"],
          "path": ["products", ""],
          "query": [
            {
              "key": "featured",
              "value": "true",
              "description": "Filter featured products"
            },
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "page_size",
              "value": "10"
            }
          ]
        },
        "description": "Get only featured products"
      },
      "response": []
    },
    {
      "name": "Filter - By Price Range",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/products/?min_price=1000&max_price=2000&page=1&page_size=10",
          "host": ["{{base_url}}"],
          "path": ["products", ""],
          "query": [
            {
              "key": "min_price",
              "value": "1000",
              "description": "Minimum price in cents ($10.00)"
            },
            {
              "key": "max_price",
              "value": "2000",
              "description": "Maximum price in cents ($20.00)"
            },
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "page_size",
              "value": "10"
            }
          ]
        },
        "description": "Filter products by price range"
      },
      "response": []
    },
    {
      "name": "Get Single Product",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/products/{{product_id}}",
          "host": ["{{base_url}}"],
          "path": ["products", "{{product_id}}"]
        },
        "description": "Get details of a specific product by ID"
      },
      "response": []
    },
    {
      "name": "Create Product",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Test Product\",\n  \"slug\": \"test-product\",\n  \"description\": \"A test product created via API\",\n  \"price\": 1500,\n  \"cost\": 900,\n  \"category_id\": \"YOUR_CATEGORY_ID\",\n  \"stock\": 50,\n  \"min_stock\": 10,\n  \"available\": true,\n  \"featured\": false,\n  \"department\": \"kitchen\",\n  \"preparation_time\": 15\n}"
        },
        "url": {
          "raw": "{{base_url}}/products/",
          "host": ["{{base_url}}"],
          "path": ["products", ""]
        },
        "description": "Create a new product (requires admin/manager role)"
      },
      "response": []
    },
    {
      "name": "Update Product",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Updated Product Name\",\n  \"price\": 1800,\n  \"available\": true,\n  \"stock\": 75\n}"
        },
        "url": {
          "raw": "{{base_url}}/products/{{product_id}}",
          "host": ["{{base_url}}"],
          "path": ["products", "{{product_id}}"]
        },
        "description": "Update an existing product (requires admin/manager role)"
      },
      "response": []
    },
    {
      "name": "Delete Product",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{base_url}}/products/{{product_id}}",
          "host": ["{{base_url}}"],
          "path": ["products", "{{product_id}}"]
        },
        "description": "Delete a product (requires admin/manager role)"
      },
      "response": []
    },
    {
      "name": "Combined Filters",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/products/?search=burger&available=true&featured=true&min_price=1000&max_price=2000&page=1&page_size=10",
          "host": ["{{base_url}}"],
          "path": ["products", ""],
          "query": [
            {
              "key": "search",
              "value": "burger"
            },
            {
              "key": "available",
              "value": "true"
            },
            {
              "key": "featured",
              "value": "true"
            },
            {
              "key": "min_price",
              "value": "1000"
            },
            {
              "key": "max_price",
              "value": "2000"
            },
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "page_size",
              "value": "10"
            }
          ]
        },
        "description": "Example using multiple filters together"
      },
      "response": []
    }
  ]
}
